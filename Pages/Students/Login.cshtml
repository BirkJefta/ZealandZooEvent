@page
@model ZealandZooEvent.Pages.Students.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <h2>Login</h2>
    <form method="post">
        <div class="form-group">
            <label asp-for="@Model.Student.Email" class="control-label"></label>
            <input asp-for="@Model.Student.Email" class="form-control" />
            <span asp-validation-for="@Model.Student.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Student.Password" class="control-label"></label>
            <input type = "password" asp-for="@Model.Student.Password" class="form-control" />
            <span asp-validation-for="@Model.Student.Password" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
        <a class="btn btn-secondary" asp-page="/Students/OpretBruger">Opret bruger</a>
    </form>
</div>

@if (Model.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @Model.ErrorMessage
    </div>
}