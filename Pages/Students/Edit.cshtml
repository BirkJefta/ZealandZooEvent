@page "{id:int}"
@model ZealandZooEvent.Pages.Students.EditModel

@{
    ViewData["Title"] = "Edit Information";
}

<h2>Edit Information</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Student.Id" />
            <div class="form-group">
                <label asp-for="Student.Name" class="control-label"></label>
                <input asp-for="Student.Name" class="form-control" />
                <span asp-validation-for="Student.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Email" class="control-label"></label>
                <input asp-for="Student.Email" class="form-control" />
                <span asp-validation-for="Student.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Telephone" class="control-label"></label>
                <input asp-for="Student.Telephone" class="form-control" />
                <span asp-validation-for="Student.Telephone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Password" class="control-label"></label>
                <input asp-for="Student.Password" class="form-control" />
                <span asp-validation-for="Student.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="/Students/Profile">Back to Profile</a>
</div>