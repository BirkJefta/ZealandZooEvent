@page
@using ZealandZooEvent.Interfaces
@inject IStudentRepository studentRepository
@model ZealandZooEvent.Pages.Events.IndexModel
@{
    ViewData["Title"] = "Index";
}
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
    body{
        color:#FC8EAC;
        background-color:black;
    }

    tbody, td,a {
        color: white;
    }
    thead{
        color: #FC8EAC;
    }
    .create-new, .btn-search{
        background-color: #B8BC86;
    }

    .btn-tilmeld {
        background-color: #C2DAB8;
    }
    

</style>
<header>
    <div class="row justify-content-center mt-2 mb-3">
        <h1>List Of Events</h1>
    </div>
</header>
<body>
    <div>
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success">
                @TempData["Message"]
            </div>
        }
    </div>
    <div class="container">

            <div class="d-flex justify-content-between align-items-center mb-3">
                <form class="form-inline my-2 my-lg-0" method="post">
                    <div class="input-group">
                        <input type="text" class="form-control" asp-for="FilterCriteria" placeholder="Search Name">
                        <div class="input-group-append">
                            <button class="btn-search" type="submit">
                                <i class="fa fa-search"></i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Location
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Date
                    </th>
                    <th>
                        Time
                    </th>
                    <th style="text-align:right">
                        Price
                    </th>
                    <th style="padding-left:50px">
                        Attend
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Events)
                {
                    <tr>
                        <td>
                            <a asp-page="ViewEvent" asp-route-id="@item.Id"> @item.Name </a>
                        </td>
                        <td>
                            @item.Location
                        </td>
                        <td>
                           "@item.Description"
                        </td>
                        <td>
                            @item.Time.ToString("dd-MM-yyyy")
                        </td>
                        <td>
                            @item.Time.ToString("HH:mm")
                        </td>
                        <td style="text-align:right">
                            @item.Price
                        </td>
                        <td style="padding-left:43px">
                            @if (studentRepository.LoggedInStudent() != null)
                            {
                                <a asp-page="/Students/JoinEvent" asp-route-id="@item.Id">
                                    <button class="btn-tilmeld btn">
                                        Attend
                                    </button>
                                </a>
                            }
                            else
                            {
                                <a asp-page="/Students/Login">
                                    <button class="btn-tilmeld btn">
                                        Attend
                                    </button>
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
</body>   