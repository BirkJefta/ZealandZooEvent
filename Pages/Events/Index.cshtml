@page
@model ZealandZooEvent.Pages.Events.IndexModel
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<a asp-page="CreateEvent">Create Event</a>
 <form method="post">
     <p>
         Search: <input type="text" asp-for="FilterCriteria" />
         <input type="submit" value="Filter" />
     </p>
</form>
<table class="table">
    <thead>
    <tr>
        <th>
            Name
        </th>
        <th>
            Location
        </th>
        <th>
            Time
        </th>
        <th>
            Description
        </th>
        <th>
            Price
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach(var item in Model.Events)
    {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Location
            </td>
            <td>
                @item.Time
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @item.Price
            </td>
            <td>
                <a asp-page="EditEvent" asp-route-id="@item.Id"> Edit</a>
            </td>
        </tr>
    }
    </tbody>
</table>