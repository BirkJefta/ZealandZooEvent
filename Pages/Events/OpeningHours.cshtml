@page
@model OpeningHoursModel
@{
    ViewData["Title"] = "Opening Hours";
}
<h1>@ViewData["Title"]</h1>

<style>
    body{
        color: #000000;
        background-color: #ffffff;
    }

    tbody, td,a {
        color: #000000;
    }
    thead{
        color: #000000;
    }
    .create-new, .btn-search{
        background-color: #006db5;
    }

</style>

<table class="table table-striped table table-bordered" style="width:350px;">
    <thead class="thead">
    <th>Day</th>
    <th>Hours</th>
    </thead>
    <tbody class="table table-striped">
    <tr>
        <td>Monday</td>
        <td>CLOSED</td>
    </tr>
    <tr>
        <td>Tuesday</td>
        <td>CLOSED</td>
    </tr>
    <tr>
        <td>Wednesday</td>
        <td>CLOSED</td>
    </tr>
    <tr>
        <td>Thursday</td>
        <td>CLOSED</td>
    </tr>
    <tr>
        <td>Friday</td>
        <td>14.00 - 18.00</td>
    </tr>
    <tr>
        <td>Saturday</td>
        <td>CLOSED</td>
    </tr>
    <tr>
        <td>Sunday</td>
        <td>CLOSED</td>
    </tr>
    </tbody>
</table>